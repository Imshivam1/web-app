<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Students</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/style.css">
    <style>
        .nav-link {
            transition: transform 0.3s ease-in-out;
        }
        .nav-link:hover {
            transform: scale(1.1);
            color: crimson;
            text-decoration: underline;
        }
    </style>
</head>
<body class="bg-dark">
    <h1 class="text-light text-center my-4">Student List</h1>
    <nav class="navbar navbar-expand-lg navbar-light bg-info">
        <div class="container">
            <a class="navbar-brand" href="#">JobShop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/interviews/add">Add Interview</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/students/add">Add Student</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/jobs/add">View Jobs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/students">View Students</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/interviews">View Interviews</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">College</th>
                    <th scope="col">Status</th>
                    <th scope="col">Batch</th>
                    <th scope="col">DSA Score</th>
                    <th scope="col">WebD Score</th>
                    <th scope="col">React Score</th>
                    <th scope="col">Actions</th> <!-- New column for actions -->
                </tr>
            </thead>
            <tbody>
                <% student_list.forEach(student => { %>
                    <tr>
                        <td><%= student.name %></td>
                        <td><%= student.college %></td>
                        <td><%= student.status %></td>
                        <td><%= student.batch %></td>
                        <td><%= student.courseScores ? student.courseScores.dsaScore : 'N/A' %></td>
                        <td><%= student.courseScores ? student.courseScores.webDScore : 'N/A' %></td>
                        <td><%= student.courseScores ? student.courseScores.reactScore : 'N/A' %></td>
                        <td>
                            <!-- Delete Button -->
                            <form action="/students/delete" method="POST" style="display: inline;">
                                <input type="hidden" name="studentId" value="<%= student._id %>">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
