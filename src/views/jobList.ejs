<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job List</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/public/css/style.css">
    <style>
        /* Custom CSS for scaling transform */
        .nav-link {
            transition: transform 0.3s ease-in-out; /* Apply smooth transition */
        }
        .nav-link:hover {
            transform: scale(1.1); /* Scale up by 10% when hovered */
            color: crimson;
            text-decoration: underline;
        }
    </style>
</head>
<body class="bg-dark">
    <h1 class="text-light text-center my-4">Job List</h1>
    <nav class="navbar navbar-expand-lg navbar-light bg-info">
        <div class="container">
            <a class="navbar-brand" href="#">JobShop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/interviews/add">Add Interview</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/students/add">Add Student</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/jobs/add">View Jobs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/students">View Students</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/interviews">View Interviews</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Location</th>
                    <!-- Add more columns as needed -->
                </tr>
            </thead>
            <tbody>
                <% job_list.forEach(job => { %>
                    <tr>
                        <td><%= job.title %></td>
                        <td><%= job.location %></td>
                        <!-- Add more columns as needed -->
                        <td>
                            <!-- Edit Button -->
                            <a href="/jobs/edit/<%= job._id %>" class="btn btn-primary">Edit</a>
                            <!-- Delete Button -->
                            <form action="/jobs/delete/<%= job._id %>" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
            
        </table>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
